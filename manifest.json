{
  "manifest_version": 3,
  "name": "Smart Text Masking",
  "version": "1.0",
  "description": "Intelligently masks sensitive information in text inputs",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}
